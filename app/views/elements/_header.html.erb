<header class="
  sticky
  top-0
  flex
  flex-row
  flex-auto
  justify-between
  border-b-2
  w-full
  h-16
  lg:h-20
  py-2
  px-4
  shadow
  lg:shadow-lg
  text-slate-300
  bg-slate-600
  border-slate-500
  dark:border-slate-900
  ">
  <div class="basis-1/3 grow text-left">
    <div id=logo class="
      fixed
      top-3
      lg:top-6
      left-4
      text-2xl
      lg:text-4xl
      -skew-y-3
      lg:-skew-y-6
      text-shadow
      lg:text-shadow-md
      text-blue-300
      dark:text-blue-400
      font-rock-salt
      ">
      <%= link_to "Donovan C. Young", root_path %>
    </div>
  </div>
  <div class="basis-1/3 grow text-center hidden lg:flex justify-center items-center font-rock-salt text-2xl"><%= @page_heading %></div>
  <div class="basis-1/3 grow text-right flex justify-end items-center content-center"><%= render "elements/navbar" %></div>
</header>
<div class="block text-center w-full py-1 lg:hidden text-lg font-rock-salt text-slate-300 bg-slate-500"><%= @page_heading %></div>
