<header class="
  sticky
  top-0
  z-50
  w-full
  h-16
  lg:h-20
  py-2
  px-4
  shadow
  lg:shadow-lg
  text-slate-700
  dark:text-slate-300
  bg-slate-300
  dark:bg-slate-900
  border-b-2
  border-slate-300
  dark:border-slate-900
  ">
  <div class="flex flex-row flex-auto content-center justify-between w-full lg:w-4/5 h-full mx-auto">
    <div id="header-left" class="basis-1/3 grow shrink-0 text-left">
      <div id=logo class="
        relative
        top-0
        sm:pt-2
        lg:pt-4
        w-fit
        lg:top-0
        left-4
        text-lg
        sm:text-xl
        lg:text-2xl
        xl:text-4xl
        -skew-y-3
        lg:-skew-y-6
        text-shadow
        text-blue-300
        dark:text-blue-400
        font-rock-salt
        ">
        <%= link_to "Donovan C. Young", root_path %>
      </div>
    </div>
    <div id="header-center" class="text-center hidden lg:flex justify-center items-center font-rock-salt text-2xl"><%= @page_heading %></div>
    <div id="header-right" class="basis-1/3 grow shrink-0 text-right flex justify-end items-center content-center"><%= render "elements/navbar" %></div>
  </div>
</header>
<div id="header-center-small" class="block text-center w-full py-1 lg:hidden text-lg font-rock-salt text-slate-300 bg-slate-500"><%= @page_heading %></div>
