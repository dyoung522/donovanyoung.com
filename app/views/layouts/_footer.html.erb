<footer class="
  fixed
  bottom-0
  z-50
  w-full
  max-h-20
  flex
  flex-row
  flex-auto
  justify-between
  py-2
  px-4
  text-slate-700
  dark:text-slate-300
  bg-slate-300
  dark:bg-slate-700
  border-t-2
  border-slate-100
  dark:border-slate-900
  ">
  <div class="basis-1/3 grow text-left text-sm flex flex-row justify-start items-center">
    <div id="footer-left" class="pr-2">Contact Me:</div>

    <nav>
      <div class="text-lg">
        <%= render "elements/social_links" %>
      </div>
    </nav>
  </nav>
  <div id="footer-center" class="basis-1/3 grow text-center text-sm hidden lg:block"></div>
  <div id="footer-right" class="basis-1/3 grow text-right text-sm hidden sm:flex flex-col justify-end items-end content-center">
    <div class="text-slate-300">
      <% if current_user %>
        <span class="mr-1">Logged in as <%= current_user.email %></span><i class="fa-solid fa-arrow-right"></i>
        <%= link_to "logout", logout_path, id: "logout-link", data: { "turbo-method": :delete } %>
      <% else %>
        <%= link_to "Member login", login_path, id: "login-link" %>
      <% end %>
    </div>
    <div data-controller="footer-info" data-footer-info-rails-version-value="<%= Rails.version %>"></div>
  </div>
</footer>
